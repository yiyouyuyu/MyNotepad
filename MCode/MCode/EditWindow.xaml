<TabItem x:Class="MCode.EditWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Background="GhostWhite"
         >
    <TabItem.Style>
        <Style TargetType="TabItem">

        </Style>
    </TabItem.Style>
    <TabItem.Header>
        <Grid Margin="-4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="textBlock" Text="未命名.txt" Margin="5,0" Grid.Column="0"/>
            <Button x:Name="closeButton" Background="{x:Null}" BorderThickness="0" Click="CloseButton_Click" Grid.Column="1" HorizontalAlignment="Right" Width="16" Height="16">
                <Path Data="F1M0,0L2,0 5,3 8,0 10,0 6,4 10,8 8,8 5,5 2,8 0,8 4,4 0,0z" Fill="Black" />
            </Button>
        </Grid>
    </TabItem.Header>
    <Grid>
        <TextBox x:Name="textBox"
                 FontSize="14"
                 AcceptsReturn="True"
                 HorizontalScrollBarVisibility="Visible"
                 VerticalScrollBarVisibility="Visible"
                 AcceptsTab="True"
                 />
    </Grid>
</TabItem>
