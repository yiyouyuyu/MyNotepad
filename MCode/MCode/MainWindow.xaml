<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Name="window" 
        mc:Ignorable="d" 
        x:Class="MCode.MainWindow"
        ScrollViewer.CanContentScroll="True"
        ResizeMode="CanResizeWithGrip"
        MinWidth="155" MinHeight="35"
        UseLayoutRounding="True"
        Background="#FF39C5BB" 
        WindowStyle="None" 
        Loaded="Window_Loaded"
        Width="800" Height="450"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    <Window.Template>
        <ControlTemplate TargetType="{x:Type Window}">
            <Border x:Name="Content" Background="{Binding Background, ElementName=window}">
                <ContentPresenter Margin="0"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="WindowState" Value="Maximized">
                    <Setter TargetName="Content" Property="Padding" Value="6" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Template>
    <Window.CommandBindings>
        <!--File-->
        <CommandBinding Command="New" Executed="New_Executed"/>
        <CommandBinding Command="Open" Executed="Open_Executed"/>
        <CommandBinding Command="Save" Executed="Save_Executed"/>
        <CommandBinding Command="SaveAs" Executed="SaveAs_Executed" CanExecute="CanSave_CanExecute"/>
        <CommandBinding Command="Close" Executed="Close_Executed" CanExecute="CanClose_CanExecute"/>
    </Window.CommandBindings>
    <Window.Resources>
        <Style x:Key="toolBarButton">
            <Setter Property="Button.Width" Value="20"/>
            <Setter Property="Button.Height" Value="23"/>
            <Setter Property="Button.BorderThickness" Value="0"/>
        </Style>
        <ControlTemplate x:Key="ToolBarButtonControlTemplate" TargetType="{x:Type Button}">
            <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                <Canvas Width="16" Height="16">
                    <ContentPresenter/>
                </Canvas>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#80DADADA"/>
                    <Setter Property="Background" TargetName="Bd" Value="#210080FF"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#80DADADA"/>
                    <Setter Property="Background" TargetName="Bd" Value="#210080FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="BorderBrush" TargetName="Bd" Value="#90006CD9"/>
                    <Setter Property="Background" TargetName="Bd" Value="#400080FF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>


    <Grid x:Name="RootGrid" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel x:Name="windowTitle" Grid.ColumnSpan="3" MouseLeftButtonDown="WindowMove" Background="GhostWhite">
            <Image Source="Resources/icon43x25.ico" Height="25" Margin="5"/>
            <StackPanel x:Name="windowTitleButton" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0" DockPanel.Dock="Right">
                <StackPanel.Resources>
                    <Style x:Key="windowTitleButton" TargetType="{x:Type Button}">
                        <Setter Property="Width" Value="34"/>
                        <Setter Property="Height" Value="26"/>
                    </Style>
                </StackPanel.Resources>
                <Button Style="{StaticResource windowTitleButton}" BorderThickness="0" Background="#00FFFFFF" Click="WindowMinimized_Click">
                    <Path Data="F1M0,6L0,9 9,9 9,6 0,6z" Fill="#39c5bb" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <Button BorderThickness="0" Background="#00FFFFFF" Click="WindowSize_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ResourceKey=windowTitleButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding WindowState, ElementName=window}" Value="Normal">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Path Data="F1M0,0L0,9 9,9 9,0 0,0 0,3 8,3 8,8 1,8 1,3z" Fill="#39c5bb" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding WindowState, ElementName=window}" Value="Maximized">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Path Data="F1M0,10L0,3 3,3 3,0 10,0 10,2 4,2 4,3 7,3 7,6 6,6 6,5 1,5 1,10z M1,10L7,10 7,7 10,7 10,2 9,2 9,6 6,6 6,9 1,9z" Fill="#39c5bb" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Style="{StaticResource windowTitleButton}" BorderThickness="0" Background="#00FFFFFF" Click="WindowClose_Click">
                    <Path Data="F1M0,0L2,0 5,3 8,0 10,0 6,4 10,8 8,8 5,5 2,8 0,8 4,4 0,0z" Fill="#39c5bb" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>
            <Menu x:Name="menu"  Background="{x:Null}" VerticalAlignment="Center" KeyboardNavigation.TabNavigation="Contained" Grid.Column="1" FontSize="14" Margin="5" >
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Command="New">
                        <MenuItem.Icon>
                            <Image Source="Resources/toolNew32.ico"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Open" Command="Open">
                        <MenuItem.Icon>
                            <Image Source="Resources/toolOpen32.ico"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Save"  Command="Save" >
                        <MenuItem.Icon>
                            <Image Source="Resources/toolSave32.ico"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Save _as" Command="SaveAs"/>
                    <Separator/>
                    <MenuItem Header="_Close" Command="Close" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Undo" Command="Undo">
                        <MenuItem.Icon>
                            <Image Source="Resources/toolUndo32.ico"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Redo" Command="Redo">
                        <MenuItem.Icon>
                            <Image Source="Resources/toolRedo32.ico"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="_Find"/>
                    <MenuItem Header="_Replace"/>
                    <Separator/>
                    <MenuItem Header="_Cut" Command="Cut"/>
                    <MenuItem Header="_Copy" Command="Copy"/>
                    <MenuItem Header="_Paste" Command="Paste"/>
                    <MenuItem Header="_Delete" Command="Delete"/>
                    <Separator/>
                    <MenuItem Header="_Date" Click="Date_Click"/>
                </MenuItem>
                <MenuItem Header="_Option">
                    <MenuItem Header="_Wrap" Click="Wrap_Click">
                        <MenuItem.Icon>
                            <Image x:Name="wrapAuto"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_Aboat"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <DockPanel Grid.Row="1">
            <DockPanel DockPanel.Dock="Top" Background="GhostWhite">
                <ToolBarTray Margin="5,0" Background="{x:Null}">
                    <ToolBar Background="{x:Null}">
                        <Button Style="{StaticResource ResourceKey=toolBarButton}" Command="New">
                            <Canvas Width="16" Height="16">
                                <Path Data="M5,3 L5,15 15,15 15,6 12,3z" Fill="White" Stroke="White" Width="16" Height="16" StrokeThickness="2" ClipToBounds="True"/>
                                <Path Data="M5,3 L5,15 15,15 15,6 12,3z M6,4 6,14 14,14 14,7 11,7 11,4z" Fill="Black" Width="16" Height="16"/>
                                <Path Data="M2,1 L2,2 3,2 3,3 1,3 1,4 3,4 3,5 2,5 2,6 3,6 3,5 4,5 4,7 5,7 5,5 6,5 6,6 7,6 7,5 6,5 6,4 8,4 8,3 6,3 6,2 7,2 7,1 6,1 6,2 5,2 5,0 4,0 4,2 3,2 3,1z" Fill="White" Stroke="White" Width="16" Height="16" StrokeThickness="2" ClipToBounds="True"/>
                                <Path Data="M2,1 L2,2 3,2 3,3 1,3 1,4 3,4 3,5 2,5 2,6 3,6 3,5 4,5 4,7 5,7 5,5 6,5 6,6 7,6 7,5 6,5 6,4 8,4 8,3 6,3 6,2 7,2 7,1 6,1 6,2 5,2 5,0 4,0 4,2 3,2 3,1z M4,3 L4,4 5,4 5,3z" Fill="#39C5BB" Width="16" Height="16"/>
                            </Canvas>
                        </Button>
                        <Button Style="{StaticResource ResourceKey=toolBarButton}" Command="Open">
                            <Canvas Width="16" Height="16">
                                <Path Data="M2,4 L2,10 1,10 3,15 15,15 15,4z" Fill="White" Stroke="White" Width="16" Height="16" StrokeThickness="2" ClipToBounds="True"/>
                                <Path Data="M2,4 L2,10 1,10 3,15 15,15 15,4z M3,5 3,10 12,10 14,15 14,5z" Fill="#FFDAB173" Width="16" Height="16"/>
                                <Path Data="M6,3 L3.5,3 A2.5,2.5,0,0,0,3.5,8 L4,8 4,7 3.5,7 A1.5,1.5,0,0,1,3.5,4 L6,4 4,6 6,6 8.5,3.5 6,1 4,1z" Fill="White" Stroke="White" Width="16" Height="16" StrokeThickness="2" ClipToBounds="True"/>
                                <Path Data="M6,3 L3.5,3 A2.5,2.5,0,0,0,3.5,8 L4,8 4,7 3.5,7 A1.5,1.5,0,0,1,3.5,4 L6,4 4,6 6,6 8.5,3.5 6,1 4,1z" Fill="#39C5BB" Width="16" Height="16"/>
                            </Canvas>
                        </Button>
                        <Button Style="{StaticResource ResourceKey=toolBarButton}" Command="Save">
                            <Canvas Width="16" Height="16">
                                <Path Data="M2,2 L12,2 14,4 14,14 2,14z" Fill="White" Stroke="White" Width="16" Height="16" StrokeThickness="2" ClipToBounds="True"/>
                                <Path Data="M2,2 L5,2 5,7 11,7 11,2 12,2 14,4 14,14 2,14z M8,2 L10,2 10,5 8,5z" Fill="#FF39C5BB" Width="16" Height="16"/>
                            </Canvas>
                        </Button>
                    </ToolBar>
                    <ToolBar Background="{x:Null}">
                        <Button Style="{StaticResource ResourceKey=toolBarButton}" Command="Undo" Template="{DynamicResource ToolBarButtonControlTemplate}">
                            <Canvas Width="16" Height="16">
                                <Path Data="M4,1 L2,3 2,7 6,7 8,5 5.757,5 6.879,3.879 A3,3,0,0,1,11.121,8.121 L5.521,13.621 6.935,15.035 12.535,9.535 A5,5,0,0,0,5.465,2.465 L4,3.930z" Fill="White" Stroke="White" Width="16" Height="16" StrokeThickness="2" ClipToBounds="True"/>
                                <Path Data="M4,1 L2,3 2,7 6,7 8,5 5.757,5 6.879,3.879 A3,3,0,0,1,11.121,8.121 L5.521,13.621 6.935,15.035 12.535,9.535 A5,5,0,0,0,5.465,2.465 L4,3.930z" Fill="#39C5BB" Width="16" Height="16"/>
                            </Canvas>
                        </Button>
                        <Button Style="{StaticResource ResourceKey=toolBarButton}" Command="Redo">
                            <Canvas Width="16" Height="16">
                                <Path Data="M12,1 L14,3 14,7 10,7 8,5 10.243,5 9.121,3.879 A3,3,0,0,0,4.879,8.121 L10.479,13.621 9.065,15.035 3.465,9.535 A5,5,0,0,1,10.535,2.465 L12,3.930z" Fill="White" Stroke="White" Width="16" Height="16" StrokeThickness="2" ClipToBounds="True"/>
                                <Path Data="M12,1 L14,3 14,7 10,7 8,5 10.243,5 9.121,3.879 A3,3,0,0,0,4.879,8.121 L10.479,13.621 9.065,15.035 3.465,9.535 A5,5,0,0,1,10.535,2.465 L12,3.930z" Fill="#39C5BB" Width="16" Height="16"/>
                            </Canvas>
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </DockPanel>
            <TabControl x:Name="editControl" Margin="5" BorderThickness="0" Padding="0" Background="{x:Null}"/>
        </DockPanel>
        <Border>
        </Border>
        <DockPanel Background="#39C5BB" Grid.Row="2" >
            <ResizeGrip DockPanel.Dock="Right"/>
            <StatusBarItem x:Name="textBoxInformation" Foreground="White"/>
        </DockPanel>
    </Grid>
</Window>
