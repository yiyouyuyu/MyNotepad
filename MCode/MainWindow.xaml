<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCode"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="MCode.MainWindow"
        mc:Ignorable="d"
        ScrollViewer.CanContentScroll="True"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="{Binding Content, ElementName=title}"
        Height="450" Width="800">
    <Border Background="#FFB4B4B4">
        <Grid x:Name="grid" Margin="1" Background="#FFF0F0F0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="windowHead" Margin="0" MouseLeftButtonDown="WindowMove" Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="Resources/icon.ico"/>
                <Label x:Name="title" Content="MCode" FontSize="14" VerticalAlignment="Center" Grid.Column="1"/>
                <Button Margin="0,0,68,0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" BorderThickness="0" Background="{Binding Background, ElementName=grid}" Click="WindowMinimized_Click">
                    <Image Source="Resources/windowMinimized32x24.ico"/>
                </Button>
                <Button Margin="0,0,34,0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" BorderThickness="0" Background="{Binding Background, ElementName=grid}" Click="WindowSize_Click">
                    <Image Name="windowSize" Source="Resources/windowMaximized32x24.ico"/>
                </Button>
                <Button Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" BorderThickness="0" Background="{Binding Background, ElementName=grid}" Click="WindowClose_Click">
                    <Image Source="Resources/windowClose32x24.ico"/>
                </Button>
            </Grid>
            <Menu x:Name="menu" FontSize="14" Grid.Row="2" Grid.Column="1" Height="20" Margin="0,2" Background="{x:Null}">
                <MenuItem Header="File">
                    <MenuItem Header="New" Click="New_Click"/>
                    <MenuItem Header="Open" Click="Open_Click"/>
                    <MenuItem Header="Save" Click="Save_Click" />
                    <MenuItem Header="Save as" Click="SaveAs_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Undo" Click="Undo_Click"/>
                    <MenuItem Header="Redo" Click="Redo_Click"/>
                    <Separator/>
                    <MenuItem Header="Date" Click="Date_Click"/>
                </MenuItem>
            </Menu>


            <ToolBarTray Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left">
                <ToolBar>
                    <Button Click="New_Click">
                        <Image Source="Resources/toolNew32.ico" Height="16"/>
                    </Button>
                    <Button Click="Open_Click">
                        <Image Source="Resources/toolOpen32.ico" Height="16"/>
                    </Button>
                    <Button Click="Save_Click">
                        <Image Source="Resources/toolSave32.ico" Height="16"/>
                    </Button>
                </ToolBar>
                <ToolBar>
                    <Button Click="Undo_Click">
                        <Image Source="Resources/toolUndo32.ico" Height="16"/>
                    </Button>
                    <Button Click="Redo_Click">
                        <Image Source="Resources/toolRedo32.ico" Height="16"/>
                    </Button>
                </ToolBar>
            </ToolBarTray>


            <TextBox x:Name="textBox"
                     Grid.Row="4"
                     Grid.Column="1"
                     FontSize="14"
                     AcceptsReturn="True"
                     HorizontalScrollBarVisibility="Visible"
                     VerticalScrollBarVisibility="Visible"
                     SelectionChanged="TextBox_SelectionChanged"
                     AcceptsTab="True"/>
            <StatusBar Grid.Row="6" Background="#39C5BB" Grid.ColumnSpan="3" >
                <StatusBarItem x:Name="textBoxInformation" Content=" 第 1 行；第 1 列"  Foreground="White" HorizontalAlignment="Left"/>
            </StatusBar>

        </Grid>
    </Border>
</Window>
