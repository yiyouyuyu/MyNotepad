<Window x:Class="MCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCode"
        mc:Ignorable="d"
        ScrollViewer.CanContentScroll="True"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="{Binding Content, ElementName=title}"
        Height="225" Width="400">
    <Grid Background="#FFB4B4B4">
        <Grid x:Name="grid" Margin="1" Background="#FFF0F0F0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="31"/>
                <RowDefinition Height="24"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="windowHead" Margin="0" MouseLeftButtonDown="Title_MouseLeftButtonDown" Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Source="D:\代码\C#\MCode\MCode\icon\icon.png" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label x:Name="title" Content="MCode" FontSize="14" VerticalAlignment="Center" Grid.Column="1" Height="28"/>
                <Button Margin="0,0,64,0"  Content="" HorizontalAlignment="Right" Width="32" Height="24" VerticalAlignment="Top" Grid.Column="2" BorderThickness="0" Background="{Binding Background, ElementName=grid}" />
                <Button Margin="0,0,32,0"  Content="" HorizontalAlignment="Right" Width="32" Height="24" VerticalAlignment="Top" Grid.Column="2" BorderThickness="0" Background="{Binding Background, ElementName=grid}" />
                <Button Margin="0,0,0,0"  Content="X" HorizontalAlignment="Right" Width="32" Height="24" VerticalAlignment="Top" Grid.Column="2" Click="Button_Click" BorderThickness="0" Background="{Binding Background, ElementName=grid}" />
            </Grid>
            <Menu x:Name="menu" FontSize="14" Grid.Row="2" Grid.Column="1" Height="20" Margin="0,2" Background="{x:Null}">
                <MenuItem Header="File">
                    <MenuItem Header="New" Click="New_Click"/>
                    <MenuItem Header="Open" Click="Open_Click"/>
                    <MenuItem Header="Save" Click="Save_Click" />
                    <MenuItem Header="Save as" Click="SaveAs_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </MenuItem>
            </Menu>
            <TextBox x:Name="textBox"
                     Grid.Row="3"
                     Grid.Column="1"
                     FontSize="14"
                     AcceptsReturn="True"
                     HorizontalScrollBarVisibility="Visible"
                     VerticalScrollBarVisibility="Visible"
                     SelectionChanged="TextBox_SelectionChanged"
                     AcceptsTab="True"/>
            <StatusBar Grid.Row="5" Background="#39C5BB" Grid.ColumnSpan="3" >
                <StatusBarItem x:Name="textBoxInformation" Content=" 第 1 行；第 1 列"  Foreground="White" HorizontalAlignment="Left"/>
            </StatusBar>

        </Grid>
    </Grid>
</Window>
